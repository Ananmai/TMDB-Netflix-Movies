{
    "version": 2,
    "buildCommand": "npm install && npm install --prefix client && npm run build --prefix client",
    "outputDirectory": "client/dist",
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/((?!api).*)",
            "destination": "/index.html"
        }
    ]
}